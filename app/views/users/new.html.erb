<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <% if @user.errors.present? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <h2 class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3"><%= t('.sign_up') %></h2>
    <%= form_with(model: @user, local: true) do |f| %>
      <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <%= f.submit t('.create_my_account'),class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
