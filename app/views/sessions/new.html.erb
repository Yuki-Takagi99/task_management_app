<div class="container">
  <div class="row">
    <h2 class="col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3"><%= t('.login') %></h2>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
          <%= f.label :email, t('activerecord.attributes.user.email') %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
          <%= f.label :password, t('activerecord.attributes.user.password') %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
          <%= f.submit t('.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
  </div>
</div>
