<div class="container-fluid">
  <div class="raw">
    <h2><%= @user.name %><%= t('.my_page') %></h2>
    <h3><%= t('directory.user_details') %></h3>
    <table class="table table-striped">
      <tbody>
        <tr>
          <th><%= t('activerecord.attributes.user.name') %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.user.email') %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th><%= t('activerecord.attributes.user.created_at') %></th>
          <td><%= @user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to t('tasks.index.task_list'), tasks_path, class: 'btn btn-info' %>
    <%= link_to t('directory.task_creation'), new_task_path, class: 'btn btn-info' %></li>
  </div>
</div>
