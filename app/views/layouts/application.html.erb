<!DOCTYPE html>
<html>
  <head>
    <title>TaskManagementApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
    <div class="page-header">
      <h1>TaskManagement App <small>  タスクを管理できるアプリ</small></h1>
    </div>

    <div id="wrapper">
      <nav class="navbar">
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
            <li class="navbar-item"><%= link_to t('directory.user_control'), admin_users_path %></li>
            <li class="navbar-item"><%= link_to t('directory.mypage'), user_path(current_user.id) %></li>
            <li class="navbar-item"><%= link_to t('directory.logout'), session_path(current_user.id), method: :delete %></li>
          <% else %>
            <li class="navbar-item"><%= link_to t('directory.signup'), new_user_path %></li>
            <li class="navbar-item"><%= link_to t('directory.login'), new_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>

    <% if flash.notice.present? %>
      <%= flash.notice %>
    <% end %>

    <%= yield %>
  </body>
  </div>
</html>
